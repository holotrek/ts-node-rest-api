{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2016", "dom"],
        "declaration": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node"
    }
}